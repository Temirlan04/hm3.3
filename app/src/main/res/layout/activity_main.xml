<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/f1"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140sp"
        app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="22dp"
        android:layout_marginHorizontal="16sp"
        app:startIconDrawable="@drawable/email_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/com"
            android:hint="gmail.com"
            android:padding="16sp"
            android:background="@drawable/ramka"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"/>





</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/theme"
    app:layout_constraintTop_toBottomOf="@+id/f1"
        app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16sp"
        app:startIconDrawable="@drawable/ic_baseline_sort_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/f2"
            android:hint="Theme"
            android:padding="16sp"
            android:background="@drawable/ramka"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"/>





</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/message"
    app:layout_constraintTop_toBottomOf="@+id/theme"
        app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16sp"
        app:startIconDrawable="@drawable/message_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/f3"
            android:hint="Message"
            android:padding="16sp"
            android:background="@drawable/ramka"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"/>





</com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/f4"
        android:textSize="16sp"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:text="SEND"
        android:layout_marginTop="102sp"
        android:layout_marginHorizontal="15sp"
        android:paddingVertical="15sp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>